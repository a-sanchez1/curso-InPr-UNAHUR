procedure PosicionarseParaUnCuadrado(dirección1, tamaño1, dirección2, tamaño2) {
  IrAlBorde(dirección1)
  repeat(tamaño1 - 1) { Mover(opuesto(dirección1)) }
  IrAlBorde(dirección2)
  repeat(tamaño2 - 1) { Mover(opuesto(dirección2)) }
}
