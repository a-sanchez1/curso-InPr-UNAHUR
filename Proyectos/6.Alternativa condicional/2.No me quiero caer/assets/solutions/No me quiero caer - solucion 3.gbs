program {
  DibujaLaVíbora()
}

procedure DibujaLaVíbora() {
  repeat(10) {
    DibujarSegmentoDeVíboraYAvanzar()
  }
}

procedure DibujarSegmentoDeVíboraYAvanzar() {
  Poner(Verde)
  AvanzarAlEsteONorte()
}

procedure AvanzarAlEsteONorte() {
  if (puedeMover(Este)) 
       { Mover(Este) }
  else { Mover(Norte)}
}
